{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/.next/**",
			"**/.astro/**",
			"**/.vercel/**",
			"**/.vscode/**",
			"**/build/**",
			"**/coverage/**",
			"**/*.min.*",
			"**/types/wire-data.ts",
			"**/data-table/**/types.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": [
			"*.astro",
			"**/.vercel/**",
			"**/dist/**",
			"**/.astro/**",
			"**/.vscode/**"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/.next/**",
			"**/.astro/**",
			"**/.vercel/**",
			"**/.vscode/**",
			"**/build/**",
			"**/coverage/**",
			"**/*.min.*",
			"**/types/wire-data.ts",
			"**/data-table/**/types.ts"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
