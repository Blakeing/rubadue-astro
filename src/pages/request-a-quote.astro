---
import BaseLayout from "../layouts/BaseLayout.astro";
import QuoteRequestForm from "../components/react/QuoteRequestForm";
---

<BaseLayout
  title="Request a Quote - Rubadue Wire"
  description="Request a quote for your wire and cable needs."
>
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Request a Quote</h1>
    <p class="text-center mb-8 max-w-2xl mx-auto">
      Please fill out the form below and we'll get back to you as soon as
      possible with a quote for your wire and cable needs.
    </p>
    <QuoteRequestForm client:load />
  </div>
</BaseLayout>
