---
import BaseHead from "@/components/astro/layout/BaseHead.astro";
import { Header } from "@/components/react/Header";
import Footer from "@/components/astro/layout/Footer.astro";
import Hero from "@/components/astro/layout/Hero.astro";
import CableSection from "@/components/react/CableSection";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
import "@/styles/global.css";

const title = "Rubadue Wire - Advanced Wire Solutions";
const description =
  "Specializing in Litz wire manufacturing, we deliver innovative solutions for high-frequency applications, transformers, and power supplies with unmatched quality and precision.";
