---
import { Button, Card } from "@/components/ui";
import BaseLayout from "@/layouts/BaseLayout.astro";

interface Props {
  text: string;
  description?: string;
}
---

<BaseLayout
  title="Careers | Rubadue Wire"
  description="Join our team at Rubadue Wire and be part of a company that values innovation, growth, and employee well-being."
  category="Careers"
  eyebrow="Careers"
  headerTitle="Join Our Team"
>
  <div class="py-6 sm:py-12 md:py-16 lg:space-y-24">
    <!-- Compensation Section -->
    <div>
      <div class="mx-auto max-w-7xl pb-12 lg:pb-0 px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2 class="text-base/7 font-semibold text-primary font-display">
            Compensation
          </h2>
          <p
            class="mt-2 text-pretty text-2xl sm:text-3xl font-semibold tracking-tight text-foreground"
          >
            Competitive Pay & Performance Rewards
          </p>
          <p class="mt-4 sm:mt-6 text-base sm:text-lg/8 text-muted-foreground">
            We offer competitive compensation packages designed to recognize and
            reward your contributions to our success.
          </p>
        </div>
        <Card className="mt-6 sm:mt-16 p-4 sm:p-8">
          <dl
            class="mx-auto grid max-w-2xl grid-cols-1 gap-4 sm:gap-8 text-base/7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-x-16"
          >
            {
              [
                "Pay for Performance Wages",
                "Hourly Pay",
                "Salary Pay",
                "Weekly Pay Periods",
                "Bonus Program",
                "Quarterly Profit Sharing",
                "Shift Premiums",
              ].map((item) => (
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-foreground">
                    <svg
                      class="absolute left-1 top-1 size-5 text-primary"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    {item}
                  </dt>
                </div>
              ))
            }
          </dl>
        </Card>
      </div>
    </div>

    <!-- Benefits Section -->
    <div class="bg-accent py-12 sm:py-24 border-y border">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2 class="text-base/7 font-semibold text-primary font-display">
            Benefits
          </h2>
          <p
            class="mt-2 text-pretty text-2xl sm:text-3xl font-semibold tracking-tight text-foreground"
          >
            Comprehensive Healthcare & Financial Benefits
          </p>
          <p class="mt-4 sm:mt-6 text-base sm:text-lg/8 text-muted-foreground">
            We provide a comprehensive benefits package to support your health,
            well-being, and financial future.
          </p>
        </div>
        <Card className="mt-6 sm:mt-16 p-4 sm:p-8 bg-background">
          <dl
            class="mx-auto grid max-w-2xl grid-cols-1 gap-4 sm:gap-8 text-base/7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-x-16"
          >
            {
              [
                { text: "ESOP", desc: "Employee Stock Ownership Plan" },
                { text: "401k", desc: "Retirement savings" },
                {
                  text: "Medical",
                  desc: "Company contributes the majority of the cost",
                },
                { text: "Dental", desc: "Employees covered at 100%" },
                { text: "Vision", desc: "Employees covered at 100%" },
                { text: "Life Insurance", desc: "Company paid coverage" },
              ].map((item) => (
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-foreground">
                    <svg
                      class="absolute left-1 top-1 size-5 text-primary"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    {item.text}
                  </dt>
                  {item.desc && <dd class="inline"> - {item.desc}</dd>}
                </div>
              ))
            }
          </dl>
        </Card>
      </div>
    </div>

    <!-- Work Life & Development Section -->
    <div class="">
      <div class="mx-auto max-w-7xl py-12 lg:py-0 px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2 class="text-base/7 font-semibold text-primary font-display">
            Work Life & Development
          </h2>
          <p
            class="mt-2 text-pretty text-2xl sm:text-3xl font-semibold tracking-tight text-foreground"
          >
            Balance & Growth Opportunities
          </p>
          <p class="mt-4 sm:mt-6 text-base sm:text-lg/8 text-muted-foreground">
            We believe in supporting both your professional growth and personal
            well-being.
          </p>
        </div>
        <Card className="mt-6 sm:mt-16 p-4 sm:p-8">
          <dl
            class="mx-auto grid max-w-2xl grid-cols-1 gap-4 sm:gap-8 text-base/7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-x-16"
          >
            {
              [
                { text: "Generous PTO", desc: "Flexible time off policy" },
                {
                  text: "Work/Life Balance",
                  desc: "We value your personal time",
                },
                {
                  text: "Wellness Program",
                  desc: "Including gym reimbursement",
                },
                {
                  text: "Development",
                  desc: "Tuition reimbursement and training",
                },
                {
                  text: "Recognition",
                  desc: "Service awards and peer recognition",
                },
                { text: "Community", desc: "Paid volunteer time off" },
              ].map((item) => (
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-foreground">
                    <svg
                      class="absolute left-1 top-1 size-5 text-primary"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    {item.text}
                  </dt>
                  {item.desc && <dd class="inline"> - {item.desc}</dd>}
                </div>
              ))
            }
          </dl>
        </Card>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-accent border-t border py-12 sm:py-24">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <Card className="p-4 sm:p-12">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-base/7 font-semibold text-primary font-display">
              Ready to Join?
            </h2>
            <p
              class="mt-2 text-pretty text-2xl sm:text-3xl font-semibold tracking-tight text-foreground"
            >
              Start Your Journey With Us
            </p>
            <p
              class="mt-4 sm:mt-6 text-base sm:text-lg/8 text-muted-foreground"
            >
              We're always looking for talented individuals to join our team.
              Get in touch to learn more about our current opportunities.
            </p>
            <div
              class="mt-6 sm:mt-10 flex justify-center flex-col sm:flex-row gap-4"
            >
              <a
                href="https://wireexpertsgroup.applytojob.com/"
                target="_blank"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2"
                >View Current Opportunities</a
              >
              <a
                href="/contact"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
                >Contact Us</a
              >
            </div>
          </div>
        </Card>
      </div>
    </div>
  </div>
</BaseLayout>
