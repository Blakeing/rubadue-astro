---
import BaseLayout from "@/layouts/BaseLayout.astro";

interface Person {
  name: string;
  role: string;
  imageUrl: string;
  xUrl: string;
  linkedinUrl: string;
}

const people: Person[] = [
  {
    name: "Sue Rubadue",
    role: "President",
    imageUrl:
      "https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
    xUrl: "#",
    linkedinUrl: "https://www.linkedin.com/company/rubadue-wire/",
  },
  {
    name: "Kathy Rubadue",
    role: "Vice President",
    imageUrl:
      "https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
    xUrl: "#",
    linkedinUrl: "https://www.linkedin.com/company/rubadue-wire/",
  },
  {
    name: "Steve Rubadue",
    role: "Vice President",
    imageUrl:
      "https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
    xUrl: "#",
    linkedinUrl: "https://www.linkedin.com/company/rubadue-wire/",
  },
];
---

<BaseLayout
  title="Partnerships | Rubadue Wire"
  description="Learn about our strategic partnerships and how we work together to deliver exceptional wire solutions."
  category="About"
  eyebrow="About"
  headerTitle="Our Partnerships"
>
  <div class="py-8 sm:py-12 md:py-16 lg:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2
          class="text-pretty text-3xl sm:text-4xl font-semibold tracking-tight text-gray-900 lg:text-5xl"
        >
          Our Leadership Team
        </h2>
        <p class="mt-4 sm:mt-6 text-base sm:text-lg/8 text-gray-600">
          Meet the dedicated leaders who drive innovation and excellence at
          Rubadue Wire. Our leadership team brings decades of experience and a
          shared commitment to delivering exceptional wire solutions.
        </p>
      </div>
      <ul
        role="list"
        class="mx-auto mt-10 sm:mt-20 grid max-w-2xl grid-cols-1 gap-x-6 gap-y-10 sm:gap-x-8 sm:gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        {
          people.map((person) => (
            <li>
              <img
                alt=""
                src={person.imageUrl}
                class="aspect-[3/2] w-full rounded-2xl object-cover"
              />
              <h3 class="mt-4 sm:mt-6 text-base sm:text-lg/8 font-semibold tracking-tight text-gray-900">
                {person.name}
              </h3>
              <p class="text-sm sm:text-base/7 text-gray-600">{person.role}</p>
              <ul role="list" class="mt-4 sm:mt-6 flex gap-x-4 sm:gap-x-6">
                <li>
                  <a
                    href={person.xUrl}
                    class="text-gray-400 hover:text-gray-500"
                  >
                    <span class="sr-only">X</span>
                    <svg
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      aria-hidden="true"
                      class="size-5"
                    >
                      <path d="M11.4678 8.77491L17.2961 2H15.915L10.8543 7.88256L6.81232 2H2.15039L8.26263 10.8955L2.15039 18H3.53159L8.87581 11.7878L13.1444 18H17.8063L11.4675 8.77491H11.4678ZM9.57608 10.9738L8.95678 10.0881L4.02925 3.03974H6.15068L10.1273 8.72795L10.7466 9.61374L15.9156 17.0075H13.7942L9.57608 10.9742V10.9738Z" />
                    </svg>
                  </a>
                </li>
                <li>
                  <a
                    href={person.linkedinUrl}
                    class="text-gray-400 hover:text-gray-500"
                  >
                    <span class="sr-only">LinkedIn</span>
                    <svg
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      aria-hidden="true"
                      class="size-5"
                    >
                      <path
                        d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                        clip-rule="evenodd"
                        fill-rule="evenodd"
                      />
                    </svg>
                  </a>
                </li>
              </ul>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</BaseLayout>
