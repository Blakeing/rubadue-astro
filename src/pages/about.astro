---
import BaseLayout from "@/layouts/BaseLayout.astro";

interface Person {
  name: string;
  role: string;
  imageUrl: string;
  xUrl: string;
  linkedinUrl: string;
}

const people: Person[] = [
  {
    name: "Sue Rubadue",
    role: "President",
    imageUrl:
      "https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
    xUrl: "#",
    linkedinUrl: "https://www.linkedin.com/company/rubadue-wire/",
  },
  {
    name: "Kathy Rubadue",
    role: "Vice President",
    imageUrl:
      "https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
    xUrl: "#",
    linkedinUrl: "https://www.linkedin.com/company/rubadue-wire/",
  },
  {
    name: "Steve Rubadue",
    role: "Vice President",
    imageUrl:
      "https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
    xUrl: "#",
    linkedinUrl: "https://www.linkedin.com/company/rubadue-wire/",
  },
];

const timelineEvents = [
  {
    year: "1977",
    description:
      "Founded with a core philosophy of providing customized solutions.",
  },
  {
    year: "1977-1995",
    description: "First to market extruded triple insulated wire",
  },
  {
    year: "1995",
    description: "Moved to Greeley, Colorado",
  },
  {
    year: "2002",
    description:
      "Rubadue Wire won the Dupont Plunkett Award for new use of FEP",
  },
  {
    year: "2013",
    description: "Expanded Greeley facility",
  },
  {
    year: "2014",
    description: "Acquired by PHGI and converted to 100% Employee Owned",
  },
  {
    year: "2015",
    description: "Acquired Kerrigan-Lewis, specialty manufacturer of Litz Wire",
  },
  {
    year: "2018",
    description: "Moved to larger facility to support continued growth",
  },
  {
    year: "2019",
    description: "PHGI rebrands to Wire Experts Group",
  },
  {
    year: "2022-2023",
    description:
      "Installed 5 new extrusion lines & increasing respool capacity",
  },
  {
    year: "2024",
    description:
      "Active projects to expand Litz capabilities & add new production line for customer specific project",
  },
];
---

<BaseLayout
  title="About Us | Rubadue Wire"
  description="Learn about Rubadue Wire's mission, vision, and commitment to solving wire and cable challenges when high performance and reliability are critical."
  category="About"
  eyebrow="About Rubadue Wire"
  headerTitle="Excellence Through Innovation"
  headerDescription="We solve wire and cable challenges when high performance and reliability are critical, creating the premier brand in developing and manufacturing specialty wire and cable to support tomorrow's innovation."
>
  <div class="py-12">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      {/* Mission & Vision Section */}
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 mb-24">
        <div class="bg-card rounded-lg p-8">
          <h3 class="text-2xl font-bold text-primary mb-4">OUR MISSION</h3>
          <p class="text-lg text-card-foreground">
            We solve wire and cable challenges when high performance and
            reliability are critical.
          </p>
        </div>
        <div class="bg-card rounded-lg p-8">
          <h3 class="text-2xl font-bold text-primary mb-4">OUR VISION</h3>
          <p class="text-lg text-card-foreground">
            Create the premier brand in developing and manufacturing specialty
            wire and cable to support tomorrow's innovation.
          </p>
        </div>
      </div>

      {/* Leadership Section */}
      <div class="mb-24">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            class="text-4xl font-semibold tracking-tight text-foreground sm:text-5xl"
          >
            Our Leadership Team
          </h2>
          <p class="mt-6 text-lg/8 text-muted-foreground">
            Meet the dedicated leaders who drive innovation and excellence at
            Rubadue Wire. Our leadership team brings decades of experience and a
            shared commitment to delivering exceptional wire solutions.
          </p>
        </div>
        <ul
          role="list"
          class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3"
        >
          {
            people.map((person) => (
              <li>
                <img
                  alt=""
                  src={person.imageUrl}
                  class="aspect-[3/2] w-full rounded-2xl object-cover"
                />
                <h3 class="mt-6 text-lg/8 font-semibold text-foreground">
                  {person.name}
                </h3>
                <p class="text-base/7 text-muted-foreground">{person.role}</p>
                <ul role="list" class="mt-6 flex gap-x-6">
                  <li>
                    <a
                      href={person.xUrl}
                      class="text-muted-foreground hover:text-foreground"
                    >
                      <span class="sr-only">X</span>
                      <svg
                        fill="currentColor"
                        viewBox="0 0 20 20"
                        aria-hidden="true"
                        class="size-5"
                      >
                        <path d="M11.4678 8.77491L17.2961 2H15.915L10.8543 7.88256L6.81232 2H2.15039L8.26263 10.8955L2.15039 18H3.53159L8.87581 11.7878L13.1444 18H17.8063L11.4675 8.77491H11.4678ZM9.57608 10.9738L8.95678 10.0881L4.02925 3.03974H6.15068L10.1273 8.72795L10.7466 9.61374L15.9156 17.0075H13.7942L9.57608 10.9742V10.9738Z" />
                      </svg>
                    </a>
                  </li>
                  <li>
                    <a
                      href={person.linkedinUrl}
                      class="text-muted-foreground hover:text-foreground"
                    >
                      <span class="sr-only">LinkedIn</span>
                      <svg
                        fill="currentColor"
                        viewBox="0 0 20 20"
                        aria-hidden="true"
                        class="size-5"
                      >
                        <path
                          d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                          clip-rule="evenodd"
                          fill-rule="evenodd"
                        />
                      </svg>
                    </a>
                  </li>
                </ul>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Join Our Team Section */}
      <div class="bg-primary/10 rounded-2xl p-12 mb-24">
        <div class="mx-auto max-w-2xl text-center">
          <h2
            class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
          >
            Join Our Team!
          </h2>
          <p class="mt-6 text-lg leading-8 text-muted-foreground">
            If you strive for Precision, care about Performance, and take pride
            in Partnership, you are who we are looking for.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a
              href="/careers"
              class="rounded-md bg-primary px-3.5 py-2.5 text-sm font-semibold text-primary-foreground shadow-sm hover:bg-primary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary"
            >
              Apply Today
            </a>
          </div>
        </div>
      </div>

      {/* History Timeline Section */}
      <div>
        <div class="mx-auto max-w-2xl lg:mx-0 mb-16">
          <h2
            class="text-4xl font-semibold tracking-tight text-foreground sm:text-5xl"
          >
            Our History
          </h2>
          <p class="mt-6 text-lg/8 text-muted-foreground">
            Since 1977, we've been pioneering innovations in wire manufacturing,
            consistently expanding our capabilities and reach to better serve
            our customers.
          </p>
        </div>
        <div class="relative">
          <div
            class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-primary/30"
          >
          </div>
          {
            timelineEvents.map((event, index) => (
              <div
                class={`relative flex items-center mb-12 ${index % 2 === 0 ? "flex-row-reverse" : ""}`}
              >
                <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 rounded-full bg-primary border-4 border-background" />
                <div
                  class={`w-1/2 ${index % 2 === 0 ? "pr-12 text-right" : "pl-12"}`}
                >
                  <h3 class="text-xl font-bold text-primary mb-2">
                    {event.year}
                  </h3>
                  <p class="text-muted-foreground">{event.description}</p>
                </div>
                <div class="w-1/2" />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
