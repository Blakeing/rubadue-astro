---
import { Image } from "astro:assets";
import customSolutionsImage from "@/assets/images/custom-solutions-featured.webp";
import { Card } from "@/components/ui";
import BaseLayout from "@/layouts/BaseLayout.astro";
import {
  Award,
  Factory,
  Handshake,
  Rocket,
  Settings,
  MessageCircle,
  Wrench,
  TestTube,
  Truck,
} from "lucide-react";

// Process steps data
const processSteps = [
  {
    number: "01",
    title: "Consultation",
    description:
      "Discuss your application needs, performance goals, and design challenges with our engineering team.",
    icon: MessageCircle,
  },
  {
    number: "02",
    title: "Design & Development",
    description:
      "We collaborate with you to develop wire designs that meet your performance, size, and regulatory requirements.",
    icon: Wrench,
  },
  {
    number: "03",
    title: "Prototype & Testing",
    description:
      "Fast-turn prototyping and rigorous testing ensure quality and compliance with global standards.",
    icon: TestTube,
  },
  {
    number: "04",
    title: "Production & Delivery",
    description:
      "We scale production efficiently to meet your volume and timeline needs with our capital investment capability.",
    icon: Truck,
  },
];
---

<BaseLayout
  title="Custom Wire Solutions | Rubadue Wire"
  description="Rubadue Wire specializes in developing custom wire and cable solutions tailored to your specific needs. Our engineering team collaborates with you to create optimal wire constructions for your unique applications."
  headerTitle="Partner with Our Engineering Team"
  headerDescription="Engineered for Your Unique Applications"
  eyebrow="Custom Solutions"
>
  <div class="my-16">
    <!-- Hero Section -->
    <div class="relative bg-background">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div
          class="mx-auto grid max-w-2xl grid-cols-1 items-start gap-x-8 gap-y-16 sm:gap-y-24 lg:mx-0 lg:max-w-none lg:grid-cols-2"
        >
          <div class="relative">
            <div
              class="relative overflow-hidden rounded-3xl bg-card px-6 pb-9 pt-64 shadow-2xl sm:px-12 lg:max-w-lg lg:px-8 lg:pb-8 xl:px-10 xl:pb-10"
            >
              <Image
                src={customSolutionsImage}
                alt="Custom Solutions"
                class="absolute inset-0 size-full object-cover"
                width={800}
                height={800}
                quality={90}
                format="webp"
              />
              <div class="absolute inset-0 bg-card mix-blend-multiply"></div>
              <div
                class="absolute left-1/2 top-1/2 -ml-16 -translate-x-1/2 -translate-y-1/2 transform-gpu blur-3xl"
                aria-hidden="true"
              >
                <div
                  class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-primary/40 to-primary/20 opacity-40"
                  style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
                >
                </div>
              </div>
            </div>
          </div>
          <div class="lg:pr-4">
            <h1
              class="text-balance font-semibold tracking-tight text-foreground text-2xl sm:text-3xl md:text-4xl"
            >
              Engineered for Your Unique Applications
            </h1>
            <p class="mt-6 text-lg/8 text-muted-foreground">
              Rubadue Wire specializes in developing custom wire and cable
              solutions tailored to your specific needs. Whether you require
              unique performance characteristics, specialized materials, or
              advanced constructions, our engineering team is ready to
              collaborate with you.
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 my-16">
      <div class="mx-auto lg:mx-0 mb-12">
        <h2
          class="text-2xl sm:text-3xl md:text-4xl text-balan font-semibold tracking-tight text-foreground mb-6"
        >
          How it Works
        </h2>
        <p class="text-base sm:text-lg/8 text-muted-foreground max-w-4xl">
          Our streamlined process ensures efficient collaboration from initial
          consultation to final delivery.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          processSteps.map((step) => (
            <Card className="p-6 h-full hover:shadow-lg transition-shadow duration-300">
              <div class="flex flex-col h-full">
                <div class="flex items-center gap-4 mb-4">
                  <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                    <step.icon className="w-6 h-6 text-primary" />
                  </div>
                  <div class="text-2xl font-bold text-primary/20">
                    {step.number}
                  </div>
                </div>
                <h3 class="text-lg font-semibold text-foreground mb-3">
                  {step.title}
                </h3>
                <p class="text-sm text-muted-foreground leading-relaxed flex-grow">
                  {step.description}
                </p>
              </div>
            </Card>
          ))
        }
      </div>
    </div>

    <!-- Why Partner Section -->
    <div class="relative mt-24 bg-background">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto lg:mx-0">
          <h2
            class="text-pretty text-2xl sm:text-3xl md:text-4xl font-semibold tracking-tight text-foreground"
          >
            Why Partner with Rubadue?
          </h2>
          <p class="mt-6 text-lg/8 text-muted-foreground max-w-4xl">
            Our commitment to excellence and innovation makes us the ideal
            partner for your custom wire solutions.
          </p>
        </div>
        <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-8">
          <Card
            className="p-6 h-full hover:shadow-lg transition-shadow duration-300"
          >
            <div class="flex flex-col h-full">
              <div class="flex items-center gap-4 mb-4">
                <div
                  class="flex size-12 items-center justify-center rounded-full bg-primary/10 flex-shrink-0"
                >
                  <Settings className="w-6 h-6 text-primary" />
                </div>
                <h3 class="text-lg font-semibold text-foreground">
                  Design Flexibility
                </h3>
              </div>
              <p
                class="text-sm text-muted-foreground leading-relaxed flex-grow"
              >
                Custom insulation materials, conductor configurations,
                shielding, jacketing — if you need it, we can build it.
              </p>
            </div>
          </Card>
          <Card
            className="p-6 h-full hover:shadow-lg transition-shadow duration-300"
          >
            <div class="flex flex-col h-full">
              <div class="flex items-center gap-4 mb-4">
                <div
                  class="flex size-12 items-center justify-center rounded-full bg-primary/10 flex-shrink-0"
                >
                  <Factory className="w-6 h-6 text-primary" />
                </div>
                <h3 class="text-lg font-semibold text-foreground">
                  Capital Investment Capability
                </h3>
              </div>
              <p
                class="text-sm text-muted-foreground leading-relaxed flex-grow"
              >
                Rubadue is committed to investing in the equipment, tooling, and
                processes required to bring your custom wire product to life —
                efficiently and at scale.
              </p>
            </div>
          </Card>
          <Card
            className="p-6 h-full hover:shadow-lg transition-shadow duration-300"
          >
            <div class="flex flex-col h-full">
              <div class="flex items-center gap-4 mb-4">
                <div
                  class="flex size-12 items-center justify-center rounded-full bg-primary/10 flex-shrink-0"
                >
                  <Award className="w-6 h-6 text-primary" />
                </div>
                <h3 class="text-lg font-semibold text-foreground">
                  Regulatory & Quality Assurance
                </h3>
              </div>
              <p
                class="text-sm text-muted-foreground leading-relaxed flex-grow"
              >
                Our custom wire products meet a variety of global standards
                including UL, IEC, and more.
              </p>
            </div>
          </Card>
          <Card
            className="p-6 h-full hover:shadow-lg transition-shadow duration-300"
          >
            <div class="flex flex-col h-full">
              <div class="flex items-center gap-4 mb-4">
                <div
                  class="flex size-12 items-center justify-center rounded-full bg-primary/10 flex-shrink-0"
                >
                  <Handshake className="w-6 h-6 text-primary" />
                </div>
                <h3 class="text-lg font-semibold text-foreground">
                  Expert Engineering Team
                </h3>
              </div>
              <p
                class="text-sm text-muted-foreground leading-relaxed flex-grow"
              >
                Our experienced engineers bring deep technical knowledge and
                industry expertise to solve your most challenging wire design
                requirements.
              </p>
            </div>
          </Card>
        </div>
        <Card className="p-4 sm:p-12 my-16">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-base/7 font-semibold text-primary font-display">
              Ready to Get Started?
            </h2>
            <p
              class="mt-2 text-pretty text-2xl sm:text-3xl font-semibold tracking-tight text-foreground"
            >
              Let's Solve Your Wire Challenge Together
            </p>
            <p
              class="mt-4 sm:mt-6 text-base sm:text-lg/8 text-muted-foreground"
            >
              Contact our team to discuss your specific requirements and
              discover how Rubadue can support your project.
            </p>
            <div
              class="mt-6 sm:mt-10 flex justify-center flex-col sm:flex-row gap-4"
            >
              <a
                href="/request-a-quote"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
              >
                Request a Quote
              </a>
              <a
                href="/contact"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2"
              >
                Contact Us
              </a>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </div>
</BaseLayout>
