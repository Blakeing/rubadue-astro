<BaseLayout
  title="Markets | Rubadue Wire"
  description="Discover how Rubadue Wire serves diverse markets with innovative wire solutions for automotive, aerospace, medical, and industrial applications."
  category="Markets"
  eyebrow="Core"
  headerTitle="Markets"
>
  <div class="py-12 sm:py-16 md:py-20 lg:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div
        class="mx-auto gap-8 sm:gap-12 lg:gap-16 grid max-w-2xl grid-cols-1 lg:mx-0 lg:max-w-none lg:grid-cols-2"
      >
        {
          markets.map((market: Market) => (
            <Card className="border-border">
              <CardHeader>
                <div class="flex flex-col sm:flex-row sm:items-center gap-4 sm:gap-x-4">
                  <div class="flex size-12 sm:size-16 items-center justify-center rounded-lg bg-primary text-primary-foreground">
                    <Fragment set:html={market.icon} />
                  </div>
                  <div>
                    <CardTitle className="text-base sm:text-lg font-semibold leading-6 sm:leading-8 text-foreground">
                      {market.name}
                    </CardTitle>
                    <CardDescription className="text-primary text-sm sm:text-base">
                      {market.tagline}
                    </CardDescription>
                  </div>
                </div>
              </CardHeader>
              <CardContent>
                <p class="text-sm sm:text-base leading-6 sm:leading-7 text-muted-foreground">
                  {market.description}
                </p>
                <div class="mt-4 sm:mt-6 space-y-4 sm:space-y-6">
                  <div>
                    <h4 class="text-sm sm:text-base font-medium text-foreground">
                      Applications
                    </h4>
                    <Separator className="my-2" />
                    <div class="mt-2 flex flex-wrap gap-2">
                      {market.applications.map((app: string) => (
                        <Badge
                          variant="outline"
                          className="border-border text-foreground text-xs sm:text-sm"
                        >
                          {app}
                        </Badge>
                      ))}
                    </div>
                  </div>
                  <div>
                    <h4 class="text-sm sm:text-base font-medium text-foreground">
                      Products
                    </h4>
                    <Separator className="my-2" />
                    <div class="mt-2 flex flex-wrap gap-2">
                      {market.products.map((product: string) => (
                        <Badge
                          variant="outline"
                          className="border-border text-foreground text-xs sm:text-sm"
                        >
                          {product}
                        </Badge>
                      ))}
                    </div>
                  </div>
                </div>
              </CardContent>
            </Card>
          ))
        }
