---
import aerospaceImage from "@/assets/images/markets/aerospace.webp";
import automotiveImage from "@/assets/images/markets/automotive.webp";
import industrialImage from "@/assets/images/markets/industrial.webp";
import medicalMriImage from "@/assets/images/markets/medical-mri.webp";
import { MarketCard } from "@/components/sections/content-blocks/MarketCard";
import type { IconName } from "@/components/ui/icons";
import BaseLayout from "@/layouts/BaseLayout.astro";

interface Market {
  name: string;
  tagline: string;
  description: string;
  applications: string[];
  products: string[];
  icon: IconName;
  image: string;
}

const markets: Market[] = [
  {
    name: "Automotive",
    tagline: "Driving Innovation in Electric Vehicle Technology",
    description:
      "Rubadue Wire powers the future of mobility with cutting-edge solutions for electric vehicle systems. From onboard charging to fast-charging power supplies and controls, our products are engineered for efficiency, durability, and reliability.",
    applications: [
      "Onboard Charging",
      "Fast Charging Power Supplies & Controls",
    ],
    products: [
      "Extruded & Tape Wrap Litz",
      "Single & Multi-Layer Winding Wire",
    ],
    icon: "car",
    image: automotiveImage.src,
  },
  {
    name: "Medical",
    tagline: "Empowering Life-Saving Innovations",
    description:
      "Rubadue Wire plays a vital role in powering advanced medical technologies, from IEC 60601 power supplies to specialty diagnostic and treatment devices. Our tight tolerance and high-performance wires meet the stringent standards required in healthcare.",
    applications: [
      "IEC 60601 Power Supplies",
      "Specialty Diagnostic & Treatment Devices",
    ],
    products: [
      "Extruded Litz",
      "Triple Insulated Wires",
      "Tight Tolerance Conductors",
    ],
    icon: "heart-pulse",
    image: medicalMriImage.src,
  },
  {
    name: "Aerospace",
    tagline: "Soaring Higher with Precision and Reliability",
    description:
      "Rubadue Wire supports the aerospace industry with solutions designed for the most demanding applications, including satellites and cutting-edge eVTOL technology. Our wires and cables meet the highest standards for performance and longevity in extreme environments.",
    applications: ["Power Supplies & Custom Magnetics", "eVTOL", "Satellites"],
    products: [
      "Custom Litz Conductors",
      "ETFE Insulated Winding Wires",
      "Custom Cables",
    ],
    icon: "plane",
    image: aerospaceImage.src,
  },
  {
    name: "Industrial Controls",
    tagline: "Strengthening Industry with High-Performance Solutions",
    description:
      "Rubadue Wire supports industrial controls and systems with reliable, high-performance wiring solutions. Our products ensure durability and efficiency in applications like welding, material handling equipment, and high-reliability power systems.",
    applications: [
      "Industrial Welding",
      "High Reliability",
      "Material Handling Equipment",
    ],
    products: [
      "Custom Litz",
      "Single & Multi-Layer PFA",
      "TCA-series Winding Wires",
    ],
    icon: "factory",
    image: industrialImage.src,
  },
];
---

<BaseLayout
  title="Markets | Rubadue Wire"
  description="Explore the diverse markets we serve with our specialized wire and cable solutions."
  category="Markets"
  eyebrow="Core"
  headerTitle="Markets"
>
  <!-- Main Content -->
  <div class="py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div
        class="mx-auto grid max-w-2xl grid-cols-1 gap-8 sm:gap-12 lg:mx-0 lg:max-w-none lg:grid-cols-2"
      >
        {
          markets.map((market: Market) => (
            <MarketCard client:load {...market} />
          ))
        }
      </div>
    </div>
  </div>
</BaseLayout>
