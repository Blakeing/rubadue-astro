---
import {
  Button,
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/react/ui";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="Part Number Builders | Rubadue Wire"
  description="Build custom part numbers for Rubadue wire products with our interactive part number builders"
  category="Tools"
  eyebrow="Resources"
  headerTitle="Part Number Builders"
>
  <div
    class="min-h-[calc(100vh-30.5rem)] mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 mx-auto">
      <Card className="flex flex-col">
        <CardHeader className="pb-3 sm:pb-6">
          <CardTitle className="text-lg sm:text-xl"
            >Insulated Winding Wire</CardTitle
          >
          <CardDescription>
            For building insulated solid conductor and stranded winding wire
            parts.
          </CardDescription>
        </CardHeader>
        <CardContent className="flex-grow pt-0">
          <div class="space-y-3 sm:space-y-4">
            <p class="text-sm text-muted-foreground">Features:</p>
            <ul
              class="list-disc list-inside text-sm text-muted-foreground space-y-1"
            >
              <li>Multiple insulation layer options</li>
              <li>Various conductor materials</li>
              <li>AWG size selection (4-40)</li>
              <li>Color coding options</li>
              <li>Insulation thickness specifications</li>
            </ul>
            <div class="pt-4">
              <a href="/part-number-builders/insulated-winding-wire">
                <Button className="w-full text-sm sm:text-base py-2">
                  Build Insulated Wire Part Number
                </Button>
              </a>
            </div>
          </div>
        </CardContent>
      </Card>

      <Card className="flex flex-col">
        <CardHeader className="pb-3 sm:pb-6">
          <CardTitle className="text-lg sm:text-xl">Rubadue Litz Wire</CardTitle
          >
          <CardDescription>
            For building bare and served Litz wire parts.
          </CardDescription>
        </CardHeader>
        <CardContent className="flex-grow pt-0">
          <div class="space-y-3 sm:space-y-4">
            <p class="text-sm text-muted-foreground">Features:</p>
            <ul
              class="list-disc list-inside text-sm text-muted-foreground space-y-1"
            >
              <li>Multiple strand count options</li>
              <li>AWG size selection (12-50)</li>
              <li>Enamel build specifications</li>
              <li>Magnet wire grade selection</li>
              <li>Optional serve layer configurations</li>
            </ul>
            <div class="pt-4">
              <a href="/part-number-builders/litz-wire">
                <Button className="w-full text-sm sm:text-base py-2">
                  Build Litz Wire Part Number
                </Button>
              </a>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</BaseLayout>
