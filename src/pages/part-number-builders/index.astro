---
import {
  Button,
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/react/ui";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="Part Number Builders | Rubadue Wire"
  description="Build custom part numbers for Rubadue wire products with our interactive part number builders"
  category="Tools"
  eyebrow="Resources"
  headerTitle="Part Number Builders"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16">
    <div class="max-w-3xl mb-12 sm:mb-16">
      <h2 class="text-2xl sm:text-3xl font-semibold text-foreground mb-4">
        Interactive Part Number Configuration
      </h2>
      <p class="text-muted-foreground text-base sm:text-lg">
        Our part number builders help you configure custom wire specifications
        with ease. Each builder provides:
      </p>
      <ul class="mt-6 space-y-3 text-muted-foreground">
        <li
          class="flex items-center gap-3 bg-card/50 p-3 rounded-lg border border-border/50 hover:border-border/80 transition-colors"
        >
          <svg
            class="size-5 text-primary shrink-0"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
              clip-rule="evenodd"></path>
          </svg>
          <span>Step-by-step guided configuration process</span>
        </li>
        <li
          class="flex items-center gap-3 bg-card/50 p-3 rounded-lg border border-border/50 hover:border-border/80 transition-colors"
        >
          <svg
            class="size-5 text-primary shrink-0"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
              clip-rule="evenodd"></path>
          </svg>
          <span>Real-time validation of specifications</span>
        </li>
        <li
          class="flex items-center gap-3 bg-card/50 p-3 rounded-lg border border-border/50 hover:border-border/80 transition-colors"
        >
          <svg
            class="size-5 text-primary shrink-0"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
              clip-rule="evenodd"></path>
          </svg>
          <span>Automatic part number generation</span>
        </li>
        <li
          class="flex items-center gap-3 bg-card/50 p-3 rounded-lg border border-border/50 hover:border-border/80 transition-colors"
        >
          <svg
            class="size-5 text-primary shrink-0"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
              clip-rule="evenodd"></path>
          </svg>
          <span>Comprehensive technical specifications</span>
        </li>
      </ul>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 mx-auto">
      <Card
        className="flex flex-col group hover:border-primary/50 transition-colors"
      >
        <CardHeader className="pb-3 sm:pb-6">
          <div class="flex items-center gap-3 mb-2">
            <!-- <div class="p-2 rounded-lg bg-primary/10">
              <svg
                class="size-5 text-primary"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"
                ></path>
              </svg>
            </div> -->
            <CardTitle className="text-lg sm:text-xl"
              >Insulated Winding Wire</CardTitle
            >
          </div>
          <CardDescription>
            For building insulated solid conductor and stranded winding wire
            parts.
          </CardDescription>
        </CardHeader>
        <CardContent className="grow pt-0">
          <div class="space-y-3 sm:space-y-4">
            <p class="text-semibold text-foreground/80">Features:</p>
            <ul class="list-none space-y-2 text-sm text-muted-foreground">
              {
                [
                  "Multiple insulation layer options",
                  "Various conductor materials",
                  "AWG size selection (4-40)",
                  "Color coding options",
                  "Insulation thickness specifications",
                ].map((feature) => (
                  <li class="flex items-center gap-2">
                    <svg
                      class="size-4 text-primary/70"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    {feature}
                  </li>
                ))
              }
            </ul>
            <div class="pt-6">
              <a href="/part-number-builders/insulated-winding-wire">
                <Button
                  className="w-full text-sm sm:text-base py-2 group-hover:bg-primary/90 transition-colors"
                >
                  Build Insulated Wire Part Number
                </Button>
              </a>
            </div>
          </div>
        </CardContent>
      </Card>

      <Card
        className="flex flex-col group hover:border-primary/50 transition-colors"
      >
        <CardHeader className="pb-3 sm:pb-6">
          <div class="flex items-center gap-3 mb-2">
            <!-- <div class="p-2 rounded-lg bg-primary/10">
              <svg
                class="size-5 text-primary"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                ></path>
              </svg>
            </div> -->
            <CardTitle className="text-lg sm:text-xl"
              >Rubadue Litz Wire</CardTitle
            >
          </div>
          <CardDescription>
            For building bare and served Litz wire parts.
          </CardDescription>
        </CardHeader>
        <CardContent className="grow pt-0">
          <div class="space-y-3 sm:space-y-4">
            <p class="text-semibold text-foreground/80">Features:</p>
            <ul class="list-none space-y-2 text-sm text-muted-foreground">
              {
                [
                  "Multiple strand count options",
                  "AWG size selection (12-50)",
                  "Enamel build specifications",
                  "Magnet wire grade selection",
                  "Optional serve layer configurations",
                ].map((feature) => (
                  <li class="flex items-center gap-2">
                    <svg
                      class="size-4 text-primary/70"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    {feature}
                  </li>
                ))
              }
            </ul>
            <div class="pt-6">
              <a href="/part-number-builders/litz-wire">
                <Button
                  className="w-full text-sm sm:text-base py-2 group-hover:bg-primary/90 transition-colors"
                >
                  Build Litz Wire Part Number
                </Button>
              </a>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</BaseLayout>
