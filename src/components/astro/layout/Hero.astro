---
import { Image } from "astro:assets";
import heroImage from "@/assets/rubadue-hero.webp";
---

<div class="relative isolate overflow-hidden h-[calc(100vh-73px)]">
  <Image
    src={heroImage}
    alt="Rubadue hero background"
    class="absolute inset-0 -z-10 object-cover brightness-[0.25] w-full h-full"
    quality={90}
    format="webp"
  />
  <div
    aria-hidden="true"
    class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
  >
    <div
      style={{
        clipPath:
          "polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)",
      }}
      class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#c06536] to-[#ff9b7a] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
    >
    </div>
  </div>
  <div class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex items-center">
    <div class="mx-auto max-w-2xl">
      <div class="hidden sm:mb-8 sm:flex sm:justify-center">
        <div
          class="relative rounded-full bg-black/20 backdrop-blur-sm px-3 py-1 text-sm/6 text-gray-200 ring-1 ring-white/20 hover:ring-white/40"
        >
          Discover our latest wire innovations.{" "}
          <a href="#" class="font-semibold text-white">
            <span aria-hidden="true" class="absolute inset-0"></span>
            Learn more <span aria-hidden="true">&rarr;</span>
          </a>
        </div>
      </div>
      <div class="text-center">
        <h1
          class="text-balance text-5xl font-semibold tracking-tight text-white sm:text-7xl"
        >
          Advanced Wire Solutions for Modern Applications
        </h1>
        <p
          class="mt-8 text-pretty text-lg font-medium text-gray-300 sm:text-xl/8"
        >
          Specializing in Litz wire manufacturing, we deliver innovative
          solutions for high-frequency applications, transformers, and power
          supplies with unmatched quality and precision.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/products"
            class="rounded-md bg-[#c06536] px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-[#c06536]/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#c06536]"
          >
            View our Products
          </a>
          <a href="#" class="text-sm/6 font-semibold text-gray-200">
            Contact Sales <span aria-hidden="true">â†’</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div
    aria-hidden="true"
    class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
  >
    <div
      style={{
        clipPath:
          "polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)",
      }}
      class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#c06536] to-[#ff9b7a] opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]"
    >
    </div>
  </div>
</div>
