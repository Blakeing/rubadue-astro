---
import { Image } from "astro:assets";
import heroImage from "@/assets/rubadue-hero.webp";
---

<div class="bg-[hsl(var(--foreground))]">
  <div class="relative isolate overflow-hidden pt-14">
    <Image
      src={heroImage}
      alt="Rubadue hero background"
      class="absolute inset-0 -z-20 object-cover grayscale mix-blend-multiply bg-foreground size-full"
      quality={90}
      format="webp"
    />

    <!-- <div class="absolute inset-0 bg-foreground bg-blend-darken opacity-75">
    </div> -->
    <!-- <img
      src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2830&q=80&blend=111827&sat=-100&exp=15&blend-mode=multiply"
      alt=""
      class="absolute inset-0 -z-10 size-full object-cover"
    /> -->
    <div
      class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
      aria-hidden="true"
    >
      <div
        class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[hsl(var(--primary))] to-[hsl(var(--accent))] opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
        style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
      >
      </div>
    </div>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
        <div class="hidden sm:mb-8 sm:flex sm:justify-center">
          <div
            class="relative rounded-full px-3 py-1 text-sm/6 text-[hsl(var(--muted-foreground))] ring-1 ring-[hsl(var(--background))/0.1] hover:ring-[hsl(var(--background))/0.2]"
          >
            Discover our latest wire innovations. <a
              href="#"
              class="font-semibold text-[hsl(var(--background))]"
              ><span class="absolute inset-0" aria-hidden="true"></span>Learn
              more <span aria-hidden="true">&rarr;</span></a
            >
          </div>
        </div>
        <div class="text-center">
          <h1
            class="text-balance text-5xl font-semibold tracking-tight text-[hsl(var(--background))] sm:text-7xl"
          >
            Advanced Wire Solutions
          </h1>
          <p
            class="mt-8 text-pretty text-lg font-medium text-[hsl(var(--muted-foreground))] sm:text-xl/8"
          >
            Specializing in custom wire manufacturing, we deliver innovative
            solutions for high-frequency applications, transformers, and power
            supplies with unmatched product quality, reliability, and
            performance.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a
              href="#"
              class="rounded-md bg-[hsl(var(--primary))] px-3.5 py-2.5 text-sm font-semibold text-[hsl(var(--background))] shadow-sm hover:bg-[hsl(var(--primary))/0.9] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[hsl(var(--primary))]"
              >Get started</a
            >
            <a
              href="#"
              class="text-sm/6 font-semibold text-[hsl(var(--background))]"
              >Learn more <span aria-hidden="true">â†’</span></a
            >
          </div>
        </div>
      </div>
    </div>
    <div
      class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
      aria-hidden="true"
    >
      <div
        class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[hsl(var(--primary))] to-[hsl(var(--accent))] opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]"
        style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
      >
      </div>
    </div>
  </div>
</div>
