---
interface Props {
  eyebrow: string;
  title: string;
  description: string;
}

const { eyebrow, title, description } = Astro.props;
---

<div class="bg-background py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <p class="text-base/7 font-semibold text-primary">
        {eyebrow}
      </p>
      <h2
        class="mt-2 text-5xl font-semibold tracking-tight text-foreground sm:text-7xl"
      >
        {title}
      </h2>
      <p
        class="mt-8 text-pretty text-lg font-medium text-muted-foreground sm:text-xl/8"
      >
        {description}
      </p>
    </div>
  </div>
</div>
