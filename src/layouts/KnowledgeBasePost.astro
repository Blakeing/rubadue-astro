---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@/components/astro/common/FormattedDate.astro";
import BaseHead from "@/components/astro/layout/BaseHead.astro";
import Footer from "@/components/astro/layout/Footer.astro";
import { Header } from "@/components/react/layout";
import { Button, Card, Separator, buttonVariants } from "@/components/react/ui";

import BaseHeader from "@/components/astro/layout/BaseHeader.astro";

type Props = CollectionEntry<"knowledgeBase">["data"];

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  tags = [],
} = Astro.props;

// Format the date for the eyebrow text
const formattedDate = pubDate
  ? pubDate instanceof Date
    ? pubDate.toLocaleDateString("en-us", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    : new Date(pubDate).toLocaleDateString("en-us", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
  : "No date available";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <!-- KaTeX CSS for math rendering -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />
  </head>

  <body class="min-h-screen bg-background">
    <Header client:load />
    <BaseHeader eyebrow={formattedDate} title={title} />
    <main
      class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16 lg:py-24"
    >
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-4 sm:gap-6 lg:gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-8">
          <article>
            <!-- {
              heroImage && (
                <div class="mb-8">
                  <img
                    src={heroImage}
                    alt=""
                    class="rounded-lg w-full max-w-4xl mx-auto shadow-lg"
                    width={1020}
                    height={510}
                  />
                </div>
              )
            } -->
            <Card>
              <div
                class="prose prose-neutral dark:prose-invert max-w-none p-4 sm:p-6 lg:p-8"
              >
                <slot />
              </div>
            </Card>
          </article>
        </div>

        <!-- Sticky Aside -->
        <aside class="lg:col-span-4 mt-6 lg:mt-0">
          <div class="lg:sticky lg:top-32 space-y-4 sm:space-y-6">
            <!-- Categories/Tags Section -->
            {
              tags.length > 0 && (
                <Card>
                  <div class="p-4 sm:p-6">
                    <h2 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4">
                      Categories
                    </h2>
                    <div class="flex flex-wrap gap-2">
                      {tags.map((tag: string) => (
                        <a
                          href={`/knowledge-base?tag=${tag}`}
                          class="inline-flex items-center rounded-full bg-muted px-2 sm:px-3 py-1 text-xs sm:text-sm font-medium hover:bg-primary hover:text-primary-foreground transition-colors"
                        >
                          {tag}
                        </a>
                      ))}
                    </div>
                  </div>
                </Card>
              )
            }

            <!-- Contact CTA -->
            <Card>
              <div class="p-4 sm:p-6 space-y-3 sm:space-y-4">
                <h2 class="text-base sm:text-lg font-semibold">Need Help?</h2>
                <p class="text-xs sm:text-sm text-muted-foreground">
                  Have questions about our products or services? Our team is
                  here to help!
                </p>
                <Button
                  asChild
                  size="sm"
                  className="w-full sm:w-auto text-xs sm:text-sm"
                >
                  <a
                    class={buttonVariants({ variant: "default" })}
                    href="/contact">Contact Us</a
                  >
                </Button>
              </div>
            </Card>
          </div>
        </aside>
      </div>
    </main>
    <Footer />
  </body>
</html>
